# Netlify Cache Control Headers
# HTML files - no cache, always fetch latest
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Service Worker - no cache, always fetch latest
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# JavaScript and CSS - cache with revalidation
/src/js/*
  Cache-Control: public, max-age=3600, must-revalidate

/src/css/*
  Cache-Control: public, max-age=3600, must-revalidate

# Images - cache for longer
/public/*
  Cache-Control: public, max-age=31536000, immutable

# Manifest - no cache
/manifest.json
  Cache-Control: no-cache, no-store, must-revalidate
